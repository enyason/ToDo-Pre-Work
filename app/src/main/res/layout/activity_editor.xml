<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.android.todo.EditorActivity">

    <EditText
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawableEnd="@drawable/ic_update_black_24dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_update_black_24dp"
            android:onClick="updateTask"
            android:text="Update"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableEnd="@drawable/ic_delete_black_24dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_delete_black_24dp"
            android:onClick="deleteTask"
            android:text="Delete"
            android:textAllCaps="false" />
    </LinearLayout>


</LinearLayout>
